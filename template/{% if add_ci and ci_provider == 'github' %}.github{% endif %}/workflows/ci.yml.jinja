name: CI

on:
  push:

jobs:
  test:
    name: Run Tests & Lint
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Install uv
        uses: astral-sh/setup-uv@v5

      - name: Set up Python
        run: uv python install {{ python_version }}

      - name: Install dependencies
        run: uv sync --frozen

      - name: Linting (Ruff)
        run: |
          # Check for code errors
          uv run ruff check src tests

      - name: Testing (Pytest)
        run: uv run pytest