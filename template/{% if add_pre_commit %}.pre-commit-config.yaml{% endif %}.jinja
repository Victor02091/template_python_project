repos:
  - repo: https://github.com/pre-commit/pre-commit-hooks
    rev: v4.5.0
    hooks:
      - id: check-yaml
      - id: check-toml
      - id: check-added-large-files
        args: ['--maxkb=50000'] # Alert if file > 50MB

  - repo: https://github.com/astral-sh/ruff-pre-commit
    rev: v0.15.0
    hooks:
      # 1. Run the linter and fix everything possible
      - id: ruff-check
        args: [--fix]
        files: ^(src|tests)/
        
      # 2. Run the formatter on the cleaned code
      - id: ruff-format
        files: ^(src|tests)/
  
  {% if add_type_checking and type_checker == "mypy" -%}
  - repo: local
    hooks:
      - id: mypy
        name: mypy
        entry: uv run mypy
        language: system
        types: [python]
        require_serial: true
  {% endif -%}